            <div class="nav-item">
                <a class="nav-link" href="/about">A propos de nous</a>
            </div>
            <a class="btn login-btn btn-outline-accent my-2 my-sm-0"
                style="font-size: 10px !important;font-family: poppins !important;" href="/login">LOGIN</a>
        </div>
